#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" // line tells os to execute the code using node.js interpreter (SHEBANG) "$basedir/../aa24_simple_calculator/index.js" "$@"
else 
  exec node // line tells os to execute the code using node.js interpreter (SHEBANG) "$basedir/../aa24_simple_calculator/index.js" "$@"
fi
